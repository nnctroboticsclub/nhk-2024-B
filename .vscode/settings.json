{
  "python.analysis.autoImportCompletions": true,
  "python.analysis.typeCheckingMode": "basic",
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "controller-stm32": true,
    "debugger-client": true,
    "esp32": true,
    "usb": true,
  },
  "editor.inlayHints.enabled": "on",
  "sonarlint.pathToCompileCommands": "${workspaceFolder}/robot3-collect-esp32/build/compile_commands.json",
  "saveAndRun": {
    "commands": [
      {
        "cmd": "clear; bash scripts/on_save.sh ${file}",
      }
    ]
  }
}